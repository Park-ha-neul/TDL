{{>layout/header}}
<link rel="stylesheet" href="/css/day.css">

{{>layout/sidebar}}

<div class="container">
    <h2></h2>

    <ul class="nav nav-tabs">
        <h1 class="active" style="width: 100%; text-align: center;" data-toggle="tab" href="#day">
            <div style="display: inline-block; font-size: 30px; border-bottom: 5px solid #EEB244; box-shadow: inset 0 -4px 0 #EEB244;">D-DAY</div>
        </h1>
    </ul>

    <div style="text-align:right; font-size: 18px; padding: 11px">
        <i class="fas fa-plus" id="addDay"></i>
    </div>
    <div class="tab-content">
        <div id="day" class="tab-pane in active">
        </div>
    </div>
</div>


<!--D-DAY 작성 모달 창-->
<!-- 메모 등록 Modal -->
<div class="modal fade" id="myModalDay">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">디데이</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <label for="title">Title :</label>
                <input type="text" class="form-control" placeholder="D-DAY title 입력" id="day_title">
                <br>
                <label for="date">D-DAY Date :</label>
                <input type="date" class="form-control" id="day_date">
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-warning" id="registDayBtn">등록</button>
            </div>

        </div>
    </div>
</div>

<!--d-day 상세보기 모달창-->

<div class="container">
    <!-- Modal -->
    <div class="modal fade" id="myModalDayDetail" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4>D-DAY 보기</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>

                </div>
                <div class="modal-body" id="dayDetail">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" style="background-color: #007bff !important" id="day_modify" display="block">d-day 수정</button>
                    <button type="button" class="btn btn-danger" id="day_detailDelete" display="block">삭제</button>
                    <button type="button" class="btn btn-warning" id="day_modifyBtn" display="none">수정</button>
                </div>
            </div>
        </div>
    </div>

</div>


{{>layout/script}}
<script src="/js/day.js"></script>
{{>layout/footer}}